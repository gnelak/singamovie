<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Favorite Movies Reviewed</h1>
    <p>Welcome to Singa Movies, your definitive guide to movies made by awesome directors from Singapore! We hope to spread the love for local films. Come be part of our community and share your thoughts!</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:display), class: 'image'), movie %>
      </div>
    </div>
  <% end %>
</div>